        <template><![CDATA[<div class="modal-header ask-question-modal-header">
  <h3 class="modal-title" style='color: black;' id="modal-title">Ask a new question</h3>
</div>
<div class="modal-body" id="modal-body">
    <div class="form-group-lg">
      <textarea type="text"
                class="form-control"
                rows="4"
                placeholder="Enter your question here."
                ng-model="m.question"></textarea>
    </div>
</div>
<div class="modal-footer">
  <button class="btn btn-primary btn-md" type="button" ng-click="m.ok()" ng-disabled="m.submitting">
