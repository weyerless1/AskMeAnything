    <span ng-show="m.submitting">Posting Question...&nbsp;<i class="fa fa-spin fa-spinner"></i></span>
  </button>
  <button class="btn btn-default btn-md" type="button" ng-click="m.cancel()" ng-hide="m.submitting">Cancel</button>
</div>]]></template>
